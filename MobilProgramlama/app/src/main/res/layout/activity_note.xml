<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NoteActivity">

    <Button
        android:id="@+id/NoteLoadButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="97dp"
        android:text="Yükle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/NoteSaveButton"
        app:layout_constraintTop_toBottomOf="@+id/NoteSaveButton" />

    <EditText
        android:id="@+id/NoteEditText"
        android:layout_width="391dp"
        android:layout_height="0dp"
        android:layout_marginBottom="15dp"
        android:gravity="top"
        android:hint="Notunuzu yazınız..."
        app:layout_constraintBottom_toTopOf="@+id/NoteSaveButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/NoteSaveButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:text="KAYDET"
        app:layout_constraintBottom_toTopOf="@+id/NoteLoadButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/NoteEditText" />

</androidx.constraintlayout.widget.ConstraintLayout>